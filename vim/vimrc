" File settings{{{
augroup file
  autocmd!
  autocmd BufRead,BufNewFile,BufEnter jboss-esb.xml setlocal filetype=jboss-esb syntax=xml foldmethod=syntax foldlevel=99
  autocmd BufRead,BufNewFile,BufEnter *.wsdl setlocal syntax=xml foldmethod=syntax foldlevel=99
  "Auto source vimrc files
  autocmd bufwritepost .vimrc,vimrc source $MYVIMRC
  autocmd bufwritepost .gvimrc,gvimrc source $MYGVIMRC

  " Set cursor position unless it's invalid or in an event handler
  autocmd BufReadPost *
      \ if line("'\"") > 0 && line("'\"") <= line("$") |
      \   exe "normal g`\"" |
      \ endif

augroup END

"}}}

" Folding {{{
let g:xml_syntax_folding=1

augroup folding
    autocmd!
    autocmd FileType xml  setlocal foldmethod=syntax foldlevel=9
    autocmd FileType java setlocal foldmethod=syntax foldlevel=9
    autocmd FileType ruby setlocal foldmethod=syntax foldlevel=9
    autocmd FileType xsd  setlocal foldmethod=syntax foldlevel=9
    autocmd FileType xslt setlocal foldmethod=syntax foldlevel=9
    autocmd FileType xsl  setlocal foldmethod=syntax foldlevel=9
    autocmd FileType vim  setlocal foldmethod=marker foldlevel=1
augroup END

" Folding }}}

